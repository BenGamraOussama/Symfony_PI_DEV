{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Centrer le formulaire et lui donner un fond clair */
        form {
            margin: 2rem auto;
            max-width: 600px;
            background: #f9f9f9;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        /* Titre du formulaire */
        h1 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        /* Style général des labels */
        form label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        /* Style général des champs de formulaire */
        form input[type="text"],
        form input[type="number"],
        form input[type="file"],
        form textarea,
        form select {
            width: 100%;
            padding: 0.75rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 0.95rem;
        }

        /* Pour checkbox ou radio (s'ils existent) */
        form input[type="checkbox"],
        form input[type="radio"] {
            margin-right: 0.5rem;
        }

        /* Bouton principal */
        button.btn.btn-primary {
            display: block;
            width: 100%;
            background-color: #007bff;
            color: #fff;
            font-weight: 600;
            border: none;
            border-radius: 4px;
            padding: 0.75rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button.btn.btn-primary:hover {
            background-color: #0056b3;
        }

        /* Bouton/lien secondaire */
        a.btn.btn-secondary {
            display: inline-block;
            margin-top: 1rem;
            background-color: #6c757d;
            color: #fff;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        a.btn.btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
    <h1 class="text-center">Modifier le produit</h1>

    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.prix) }}
    {{ form_row(form.image) }}
    {{ form_row(form.description) }}
    {{ form_row(form.disponible) }}
    {{ form_row(form.categorie) }}

    <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <div class="text-center">
        <a href="{{ path('produit_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}
