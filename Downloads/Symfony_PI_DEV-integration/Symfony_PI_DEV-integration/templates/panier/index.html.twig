{% extends 'basePatient.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2>Mon Panier</h2>

        {% if produits|length == 0 %}
            <p>Votre panier est vide. <a href="{{ path('produit_index_patient') }}">Continuer les achats</a>.</p>
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix Unitaire</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in produits %}
                    <tr>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.produit.prix }} €</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ item.total }} €</td>
                        <td>
                            <a href="{{ path('supprimer_du_panier', {'id': item.produit.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="text-right">
                <h4>Total : {{ total }} €</h4>
                <a href="{{ path('produit_index_patient') }}" class="btn btn-secondary">Continuer les achats</a>
                <a href="{{ path('app_commande_add_ligne_de_commande'') }}" class="btn btn-primary">Passer la commande</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
