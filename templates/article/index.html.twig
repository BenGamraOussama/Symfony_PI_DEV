{% extends 'base.html.twig' %}

{% block title %}Article List{% endblock %}

{% block body %}
    <div class="app">
        <div class="app-wrap">
            <div class="loader">
                <div class="h-100 d-flex justify-content-center">
                    <div class="align-self-center">
                        <img src="{{ asset('img/loader/loader.svg') }}" alt="loader">
                    </div>
                </div>
            </div>

            <div class="app-container">
                <div class="app-main" id="main">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="container py-5">
                                    <h1 class="mb-4 text-primary fw-bold text-center">Article List</h1>

                                    <!-- Create New Button -->
                                    <div class="text-center mb-4">
                                        <a href="{{ path('app_article_new') }}" class="btn btn-primary px-4 py-2">
                                            <i class="fas fa-plus"></i> Create New Article
                                        </a>
                                    </div>

                                    <!-- Articles Grid -->
                                    <div class="row">
                                        {% for article in articles %}
                                            <div class="col-md-4 mb-4">
                                                <div class="card shadow-lg border-0 rounded-3 p-3">
                                                    <div class="card-body">
                                                        <h5 class="card-title text-dark fw-semibold">{{ article.title }}</h5>
                                                        <p class="card-text text-muted">{{ article.content|slice(0, 100) ~ '...' }}</p>

                                                        <p class="text-secondary small">
                                                            <i class="fas fa-calendar-alt"></i> 
                                                            {{ article.publishedAt ? article.publishedAt|date('Y-m-d H:i') : 'Not Published' }}
                                                        </p>

                                                        <!-- Action Buttons -->
                                                        <div class="d-flex justify-content-between">
                                                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i> View
                                                            </a>
                                                            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                                <i class="fas fa-edit"></i> Edit
                                                            </a>
                                                        </div>

                                                        <!-- Delete Button (Form) -->
                                                        <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" class="mt-2"
                                                              onsubmit="return confirm('Are you sure you want to delete this article?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                            <button class="btn btn-sm btn-outline-danger w-100" href="{{path('app_article_delete',{'id':article.id})}}">
                                                                <i class="fas fa-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        {% else %}
                                            <div class="col-12 text-center">
                                                <div class="alert alert-warning">No articles found.</div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
    </div>
{% endblock %}
