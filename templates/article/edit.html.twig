{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <div class="app">
        <div class="app-wrap">
            <div class="loader">
                <div class="h-100 d-flex justify-content-center">
                    <div class="align-self-center">
                        <img src="{{ asset('img/loader/loader.svg') }}" alt="loader">
                    </div>
                </div>
            </div>
<br/><br/><br/>
            <div class="app-container">
                <div class="app-main" id="main">
                    <div class="container py-5">
                        <div class="row justify-content-center">
                            <div class="col-lg-8 col-md-10">
                                <div class="card shadow-lg border-0 rounded-3 p-4">
                                    <h2 class="mb-4 text-center text-primary fw-bold">Edit Article</h2>

                                    <!-- Form Include -->
                                    {{ include('article/_form.html.twig', {'button_label': 'Update'}) }}

                                    <!-- Action Buttons -->
                                    <div class="d-flex justify-content-between mt-4">
                                        <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left"></i> Back to List
                                        </a>
                                        {{ include('article/_delete_form.html.twig') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
    </div>
{% endblock %}
