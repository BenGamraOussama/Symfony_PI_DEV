{% extends 'base.html.twig' %}

{% block title %}List of Psychiatrists{% endblock %}

{% block body %}
    <h1>List of Psychiatrists</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for psychiatre in psychiatres %}
                <tr>
                    <td>{{ psychiatre.id }}</td>
                    <td>{{ psychiatre.name }}</td>
                    <td>
                        <a href="{{ path('app_psychiatre_show', {id: psychiatre.id}) }}">View</a>
                        <a href="{{ path('app_psychiatre_edit', {id: psychiatre.id}) }}">Edit</a>
                        <form action="{{ path('app_psychiatre_delete', {id: psychiatre.id}) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ psychiatre.id) }}">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_psychiatre') }}">Back to Psychiatrists</a>
{% endblock %}
